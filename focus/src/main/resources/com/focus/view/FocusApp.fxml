<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.focus.controllers.FocusAppController">

    <!-- Left Panel -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #E3EDF7; -fx-padding: 20;">
            <!-- Focus Entry Section -->
            <VBox spacing="10">
                <Label text="What’s your focus?" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TextField fx:id="focusInput" promptText="Intention" style="-fx-background-radius: 5;"/>
            </VBox>

            <!-- Timer Section -->
            <VBox spacing="15" alignment="CENTER">
                <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Label fx:id="sessionTimeLabel" text="18:03 → 18:28" style="-fx-text-fill: #7B7B7B;"/>
            </VBox>

            <!-- Session Buttons -->
            <VBox spacing="10" alignment="CENTER">
                <Button fx:id="startSessionButton" text="Start Session" style="-fx-background-color: #50A9DB; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;"/>
                <Button fx:id="giveUpButton" text="Give up" style="-fx-background-color: #50A9DB; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;"/>
            </VBox>

            <!-- Navigation Icons -->
            <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20 0;">
                <Button text="⏰" style="-fx-background-color: transparent; -fx-font-size: 20px;"/>
                <Button text="📊" style="-fx-background-color: transparent; -fx-font-size: 20px;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Right Panel -->
    <center>
        <VBox>
            <!-- Date Navigation -->
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #F2F2F2;">
                <Button fx:id="previousDateButton" text="◀" style="-fx-background-color: transparent;"/>
                <Label fx:id="selectedDateLabel" text="Thu, 22 Feb" style="-fx-font-size: 16px;"/>
                <Button fx:id="nextDateButton" text="▶" style="-fx-background-color: transparent;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="5">
                    <Button text="Mon 19" style="-fx-background-color: lightgray; -fx-padding: 5;"/>
                    <Button text="Tue 20" style="-fx-background-color: lightgray; -fx-padding: 5;"/>
                    <Button text="Wed 21" style="-fx-background-color: lightgray; -fx-padding: 5;"/>
                    <Button text="Thu 22" style="-fx-background-color: #D3D3D3; -fx-padding: 5;"/>
                    <Button text="Fri 23" style="-fx-background-color: lightgray; -fx-padding: 5;"/>
                    <Button text="Sat 24" style="-fx-background-color: lightgray; -fx-padding: 5;"/>
                    <Button text="Sun 25" style="-fx-background-color: lightgray; -fx-padding: 5;"/>
                </HBox>
            </HBox>

            <!-- Calendar View -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: #F9F9F9;">
                <VBox fx:id="taskContainer" spacing="10" style="-fx-padding: 10;">
                    <HBox alignment="CENTER">
                        <VBox>
                            <Label text="11:20" style="-fx-font-size: 12px;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <VBox spacing="5" style="-fx-padding: 10;">
                        <!-- Instagram Task -->
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Label text="11:20" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="Instagram" style="-fx-background-color: #A569BD; -fx-text-fill: white; -fx-padding: 5; -fx-background-radius: 5;"/>
                        </HBox>

                        <!-- Messenger Task -->
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Label text="13:08" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="Messenger" style="-fx-background-color: #A569BD; -fx-text-fill: white; -fx-padding: 5; -fx-background-radius: 5;"/>
                        </HBox>

                        <!-- Canva Task -->
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Label text="15:08" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="Canva" style="-fx-background-color: #A569BD; -fx-text-fill: white; -fx-padding: 5; -fx-background-radius: 5;"/>
                        </HBox>

                        <!-- Google Task -->
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Label text="17:00" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="Google" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 5; -fx-background-radius: 5;"/>
                        </HBox>

                        <!-- YouTube Task -->
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Label text="18:20" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="YouTube" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 5; -fx-background-radius: 5;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
    
    <!-- Bottom Panel -->
    <bottom>
         <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: #E3EDF7;">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="todayButton" text="Today" style="-fx-background-color: #50A9DB; -fx-text-fill: white; -fx-padding: 5; -fx-background-radius: 5;"/>
            <Button fx:id="addButton" text="+" style="-fx-background-color: #50A9DB; -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 5; -fx-background-radius: 50%;"/>
        </HBox>
    </bottom>
</BorderPane>
