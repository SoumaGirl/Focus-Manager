<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.focus.controllers.OverviewController">
    <!-- Top Section -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #dce1f2;">
            <Button fx:id="backButton" text="âŸµ" style="-fx-background-color: transparent;"/>
            <Label text="Overview" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
       
        </HBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #dce1f2;">
            <!-- Tabs -->
            <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Button fx:id="dayButton" text="Day" style="-fx-background-color: #d3d3d3; -fx-border-color: transparent;"/>
                <Button fx:id="weekButton" text="Week" style="-fx-background-color: #92aad4; -fx-text-fill: white; -fx-border-color: transparent;"/>
                <Button fx:id="monthButton" text="Month" style="-fx-background-color: #d3d3d3; -fx-border-color: transparent;"/>
                <Button fx:id="yearButton" text="Year" style="-fx-background-color: #d3d3d3; -fx-border-color: transparent;"/>
            </HBox>

            <!-- Focused Time Distribution -->
            <VBox spacing="10">
                <Label fx:id="dateLabel" text="Nov 19-25, 2024" style="-fx-font-size: 14px;"/>
                <Label text="Focused Time Distribution" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <!-- Chart -->
                <BarChart fx:id="timeDistributionChart" title="Focused Time Distribution" style="-fx-background-color: white;">
                    <xAxis>
                        <CategoryAxis fx:id="daysAxis"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="timeAxis"/>
                    </yAxis>
                </BarChart>
                <Label fx:id="totalTimeLabel" text="Total focused time: 30min" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
            </VBox>
        </VBox>
    </center>

    <!-- Left Section -->
    <left>
        <VBox style="-fx-padding: 20; -fx-background-color: #f2f4f7;">
            <!-- Illustration Placeholder -->
            <Pane style="-fx-min-height: 300px;">
                <Label fx:id="illustrationLabel" text="[Illustration Placeholder]" alignment="CENTER" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
            </Pane>
        </VBox>
    </left>
</BorderPane>
