<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.focus.controllers.FocusManagerController">
    <Text text="Welcome to" style="-fx-font-size: 24px;" />
    <ImageView fx:id="logoImageView" fitHeight="100" fitWidth="100" />
    <Text text="FocusManager" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
    <Text text="A focus manager is an application designed to monitor and analyze how much time a person spends on their computer." style="-fx-font-size: 18px;" />
    <Button fx:id="getStartedButton" text="Get Started" onAction="#handleGetStarted" />
</VBox>
